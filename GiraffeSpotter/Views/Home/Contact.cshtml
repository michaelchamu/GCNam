@model GiraffeSpotter.Models.ViewModels.EmailViewModel
<link href="~/Content/AdminLayout/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/AdminLayout/css/ionicons.min.css" rel="stylesheet" />
<div class="row">
    <div class=" col-md-4 col-md-offset-2">
        <div class="panel panel-gold" style="border-color: #636363;">
            <div class="panel-heading">
                <h2 align="center"><strong></strong> GET IN TOUCH
            </div>
            <div class="panel-body">
               
                    <a href="http://www.giraffeconservation.org/" target="_blank">
                        <img src="~/Images/GCF logo.jpg" alt="GCF LOGO" class="col-md-8 col-xs-8 col-sm-12 col-md-offset-2 col-xs-offset-2" />
                    </a>
              
               
                <div class="col-md-12 col-xs-12 col-sm-12">
                    <h5 align="center"><span class="glyphicon glyphicon-envelope"></span>&nbsp E-Mail: info@giraffeconservation.org</h5>
                    @*<h4 align="center"><a href="http://www.giraffeconservation.org" target="_blank">www.giraffeconservation.org</a></h4>*@
                    <h5 align="center"><i class="fa fa-facebook-square"></i></>&nbsp Like us on <a href="https://www.facebook.com/pages/Giraffe-Conservation-Foundation/213643668667273" target="_blank">Facebook</a></h5>
                    
                    <h5 align="center"><i class="fa fa-fw fa-twitter-square"></i>&nbsp Follow us on <a href="https://twitter.com/Save_Giraffe" target="_blank">Twitter</a></h5>
                    
                </div>
            </div>
        </div>
    </div>
    <div class=" col-md-4">
        <div class="panel panel-gold" style="border-color: #636363;">
            <div class="panel-heading">
                <h2 align="center"><strong></strong> SEND US A MESSAGE</h2>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    
                    if (ViewBag.EmailCode == 1)
                    {
                        <div class="alert-success">
                            @ViewBag.EmailMsg
                        </div>
                    }
                    else
                    {
                        <div class="alert-success">
                            @ViewBag.EmailMsg
                        </div>
                    }
                    
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><strong>Name&nbsp&nbsp&nbsp&nbsp</strong></span>
                            @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control", placeholder = "Full Name, e.g. John Smackel" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        </div>
                        <strong>
                            <p align="center" class="alert-danger">@Html.ValidationMessageFor(model => model.Name)</p>
                        </strong>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><strong>Subject&nbsp</strong></span>
                            @Html.TextBoxFor(model => model.Subject, null, new { @class = "form-control", placeholder = "Reason for contacting GCF" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-briefcase"></span></span>
                        </div>
                        <strong>
                            <p align="center" class="alert-danger">@Html.ValidationMessageFor(model => model.Subject)</p>
                        </strong>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><strong>Email&nbsp&nbsp&nbsp&nbsp&nbsp</strong></span>
                            @Html.TextBoxFor(model => model.Email, null, new { @class = "form-control", placeholder = "Email address, e.g. example@mail.com" })
                            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
                        </div>
                        <strong>
                            <p align="center" class="alert-danger">@Html.ValidationMessageFor(model => model.Email)</p>
                        </strong>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><strong>Text&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</strong></span>
                            @Html.TextAreaFor(model => model.Body, new { @class = "form-control", placeholder = "Your message to GCF", style="resize:vertical;" })
                            @*<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>*@
                        </div>
                        <strong>
                            <p align="center" class="alert-danger">@Html.ValidationMessageFor(model => model.Body)</p>
                        </strong>
                    </div>
                    <h4><input type="submit" value="Send Message" class="btn btn-safari btn-lg btn-block"></h4>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            var currentPage = document.getElementById("li3");
            currentPage.className = "active";
        });
    </script>
}
