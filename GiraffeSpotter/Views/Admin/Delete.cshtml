@model GiraffeSpotter.Models.UserProfile

@{
    ViewBag.Title = "Delete";
}

<div class="col-md-5 col-md-offset-3">
<fieldset>
    <center>
     <div class="alert alert-warning alert-dismissable">
                                        <i class="fa fa-warning"></i>
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        <b>Warning</b> You are about to delete an account , if you are positive , click delete. If this was a mistake, click on back to list
                                    </div>
    <legend>Account details</legend>

    <div class="display-label">
         <h4><b>User name</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="display-label">
         <h4><b>First name</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Firstname)
    </div>

    <div class="display-label">
         <h4><b>Surname</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Lastname)
    </div>

    <div class="display-label">
         <h4><b>Email address</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">
         <h4><b>Nationality</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.nationality)
    </div>

    <div class="display-label">
        <h4><b>Account Type</b></h4>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Role)
    </div>
        <br />
    </center>
</fieldset>
    @using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" class="btn btn-safari btn-lg btn-block"/>
        <br />
        <a href="~/Admin/AllUsers"  class = "btn btn-danger btn-lg btn-block">Cancel</a>
    </p>
}
</div>

