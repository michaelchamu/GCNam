@model GiraffeSpotter.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">Current Password</span>
            @*<input style="cursor:pointer;" type="file" name="file" id="file"/>*@
            @Html.TextBoxFor(m => m.OldPassword, null, new { @class = "form-control input-md" })
        </div>
        <strong>@Html.ValidationMessageFor(m => m.OldPassword)</strong>
    </div>
    
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">New Password &nbsp &nbsp &nbsp</span>
            @*<input style="cursor:pointer;" type="file" name="file" id="file"/>*@
            @Html.TextBoxFor(m => m.NewPassword, null, new { @class = "form-control input-md" })
        </div>
        <strong>@Html.ValidationMessageFor(m => m.NewPassword)</strong>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon">Confirm Password</span>
            @*<input style="cursor:pointer;" type="file" name="file" id="file"/>*@
            @Html.TextBoxFor(m => m.ConfirmPassword, null, new { @class = "form-control input-md" })
        </div>
        <strong>@Html.ValidationMessageFor(m => m.ConfirmPassword)</strong>
    </div>
    <input type="submit" value="Change Password" class="btn btn-md btn-safari btn-block" />
}
