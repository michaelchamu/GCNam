@model GiraffeSpotter.Models.ViewModels.GalleryIndexViewModelList
@using GiraffeSpotter.Models

<link rel="stylesheet" type="text/css" href="~/Content/style.css" />
<link rel="stylesheet" type="text/css" href="~/Content/demo.css" />
<link rel="stylesheet" type="text/css" href="~/Content/elastislide.css" />

<style>
    .es-carousel ul {
        display: block;
    }
</style>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2 align="center">GiraffeSpotter Observations gallery</h2>
        <div class="content">
            <div id="rg-gallery" class="rg-gallery">
                <div class="rg-thumbs">
                    <!-- Elastislide Carousel Thumbnail Viewer -->
                    <div class="es-carousel-wrapper">
                        <div class="es-nav">
                            <span class="es-nav-prev">Previous</span>
                            <span class="es-nav-next">Next</span>
                        </div>
                        <div class="es-carousel">
                            <ul>
                                @foreach (var item in Model.viewModelList)
                                {
                                    <li><a href="#">
                                        <img src="data:image;base64,@System.Convert.ToBase64String(item.imageThumbs)" data-large="data:image;base64,@System.Convert.ToBase64String(item.images)" alt="image01" data-description="@Html.DisplayFor(model => model.observation.Comment)" />
                                    </a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!-- End Elastislide Carousel Thumbnail Viewer -->
                </div>
                <!-- rg-thumbs -->
            </div>
            <!-- rg-gallery -->
        </div>
        <!-- content -->
    </div>
</div>
<br />
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.tmpl.min.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="~/Scripts/jquery.elastislide.js"></script>
<script type="text/javascript" src="~/Scripts/gallery.js"></script>

@section Scripts{
    <script id="img-wrapper-tmpl" type="text/x-jquery-tmpl">
        <div class="rg-image-wrapper">
            {{if itemsCount > 1}}
					<div class="rg-image-nav">
                        <a href="#" class="rg-image-nav-prev">Previous Image</a>
                        <a href="#" class="rg-image-nav-next">Next Image</a>
                    </div>
            {{/if}}
				<div class="rg-image"></div>
            <div class="rg-loading"></div>
            <div class="rg-caption-wrapper">
                <div class="rg-caption" style="display: none;">
                    <p></p>
                </div>
            </div>
        </div>
    </script>
   <script type="text/javascript">
       $(document).ready(function () {
           var currentPage = document.getElementById("li4");
           currentPage.className = "active";
       });
   </script>
}